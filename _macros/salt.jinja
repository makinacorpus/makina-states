    - use_vt: true
    - unless: "{{data.msr}}/_scripts/check_pip.sh {{data.name}}"
    - require_in:
      - virtualenv: update-makinastates-{{ data.name }}-venv
    - require_in:
      - mc_proxy: dummy-pre-{{ data.name }}-service-restart

