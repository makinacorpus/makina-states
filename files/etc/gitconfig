[color]
        diff = auto
        status = auto
        branch = auto
        ui = auto

[color "branch"]
        current = yellow reverse
        local = yellow
        remote = green

[color "diff"]
        meta = yellow bold
        frag = magenta bold
        old = red bold
        new = green bold
        whitespace = red reverse

[color "status"]
        added = yellow
        changed = green
        untracked = cyan

[alias]
        r = !"f() { git reset $@; git checkout $@; }; f"
        changes=diff --name-status -r
        dc = diff --cached
        rc = rebase --continue
        st = status
        ci = commit
        br = branch
        co = checkout
        df = diff
        lg = log -p
